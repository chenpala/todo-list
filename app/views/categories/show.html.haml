%ul
  - @category.todos.each do |todo|
    %li
      #{todo.title}
      = link_to "" do
        %i.glyphicon.glyphicon-check
      = link_to edit_todo_path(todo) do
        %i.glyphicon.glyphicon-pencil
      = link_to todo, method: :delete, data: {confirm: "Are you sure?"} do
        %i.glyphicon.glyphicon-remove

